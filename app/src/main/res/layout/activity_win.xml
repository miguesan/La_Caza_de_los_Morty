<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.miguel.mapa_tesoro.WinActivity"
        android:background="@color/negro">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    app:srcCompat="@drawable/titulo" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="385dp"
            android:layout_height="250dp"
            android:layout_above="@+id/bRepetir"
            android:layout_alignParentStart="true"
            android:layout_column="0"
            android:layout_marginBottom="34dp"
            android:layout_row="2"
            app:srcCompat="@drawable/gana" />

        <Button
            android:id="@+id/bRepetir"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_above="@+id/bSalir"
            android:layout_alignParentStart="true"
            android:layout_column="0"
            android:layout_marginBottom="52dp"
            android:layout_marginStart="17dp"
            android:layout_row="3"
            android:text="REPETIR" />

        <Button
            android:id="@+id/bSalir"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_column="0"
            android:layout_marginBottom="59dp"
            android:layout_marginEnd="12dp"
            android:layout_row="4"
            android:onClick="salir"
            android:text="Salir" />

    </RelativeLayout>

    </android.support.constraint.ConstraintLayout>
