<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.miguel.mapa_tesoro.MapsActivity"
    android:background="@color/negro">


    <ImageView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/latitud"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="500dp"
        android:src="@drawable/titulo2" />

    <Button
        android:id="@+id/bEscaner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/map"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp"
        android:text="Escanear"
        />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="45dp"
        tools:context="com.example.miguel.mapa_tesoro.MapsActivity2" />

    <TextView
        android:id="@+id/latitud"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_above="@+id/longitud"
        android:layout_alignParentStart="true"
        android:layout_column="0"
        android:layout_row="0"
        android:text="Latitud: NO SE MUESTRA"
        android:textColor="@color/blanco" />

    <TextView
        android:id="@+id/longitud"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_column="0"
        android:layout_row="0"
        android:text="Longitud: NO SE MUESTRA"
        android:textColor="@color/rojo"/>

    <TextView
        android:id="@+id/txtqr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/map"
        android:layout_centerHorizontal="true"
        android:text="TEXTO QR" />

</RelativeLayout>
