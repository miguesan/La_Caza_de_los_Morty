<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.miguel.mapa_tesoro.MainActivity"
    android:background="@color/negro">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="385dp"
            android:layout_height="250dp"
            android:layout_alignStart="@+id/bComenzar"
            android:layout_centerVertical="true"
            android:layout_column="0"
            android:layout_row="2"
            app:srcCompat="@drawable/rick" />

        <Button
            android:id="@+id/bComenzar"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView"
            android:layout_column="0"
            android:layout_marginStart="12dp"
            android:layout_marginTop="21dp"
            android:layout_row="1"
            android:text="Comenzar la Caza" />

        <Button
            android:id="@+id/bSalir"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_column="0"
            android:layout_marginBottom="20dp"
            android:layout_row="3"
            android:onClick="salir"
            android:text="Salir" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="43dp"
            app:srcCompat="@drawable/titulo" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>